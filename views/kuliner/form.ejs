<%- include('../layouts/main', { 
    title: (typeof kuliner !== 'undefined' && kuliner) ? 'Edit Kuliner' : 'Tambah Kuliner',
    page: 'kuliner'
}) %>

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-utensils text-warning"></i>
            <%= (typeof kuliner !== 'undefined' && kuliner) ? 'Edit Kuliner' : 'Tambah Kuliner' %>
        </h1>
        <a href="/admin/kuliner" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> Kembali ke Daftar
        </a>
    </div>

    <!-- Error Messages -->
    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h6><i class="fas fa-exclamation-circle"></i> Terjadi Kesalahan:</h6>
            <ul class="mb-0">
                <% errors.forEach(error => { %>
                    <li><%= error.msg %></li>
                <% }) %>
            </ul>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <% } %>

    <!-- Form Card -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-warning">
                    <h6 class="m-0 font-weight-bold text-white">
                        <i class="fas fa-edit"></i> Form Data Kuliner
                    </h6>
                </div>
                <div class="card-body">
                    <form action="<%= (typeof kuliner !== 'undefined' && kuliner) ? `/admin/kuliner/update/${kuliner.id}` : '/admin/kuliner/store' %>" 
                          method="POST" 
                          enctype="multipart/form-data"
                          id="kulinerForm">
                        
                        <div class="row">
                            <!-- Nama Kuliner -->
                            <div class="col-md-12 mb-3">
                                <label for="nama" class="form-label">
                                    <i class="fas fa-utensils text-warning"></i> Nama Kuliner *
                                </label>
                                <input type="text" 
                                       class="form-control" 
                                       id="nama" 
                                       name="nama" 
                                       value="<%= (typeof kuliner !== 'undefined' && kuliner) ? kuliner.nama : '' %>"
                                       placeholder="Masukkan nama kuliner"
                                       required>
                                <small class="form-text text-muted">Contoh: Gudeg Yu Djum, Bakso Malang Karapitan, Sate Klathak</small>
                            </div>

                            <!-- Jenis Makanan -->
                            <div class="col-md-6 mb-3">
                                <label for="jenis_makanan" class="form-label">
                                    <i class="fas fa-tag text-warning"></i> Jenis Makanan *
                                </label>
                                <select class="form-control" id="jenis_makanan" name="jenis_makanan" required>
                                    <option value="">Pilih Jenis Makanan</option>
                                    <option value="Makanan Utama" <%= (typeof kuliner !== 'undefined' && kuliner && kuliner.jenis_makanan == 'Makanan Utama') ? 'selected' : '' %>>üçõ Makanan Utama</option>
                                    <option value="Makanan Ringan" <%= (typeof kuliner !== 'undefined' && kuliner && kuliner.jenis_makanan == 'Makanan Ringan') ? 'selected' : '' %>>üç™ Makanan Ringan</option>
                                    <option value="Minuman" <%= (typeof kuliner !== 'undefined' && kuliner && kuliner.jenis_makanan == 'Minuman') ? 'selected' : '' %>>ü•§ Minuman</option>
                                    <option value="Dessert" <%= (typeof kuliner !== 'undefined' && kuliner && kuliner.jenis_makanan == 'Dessert') ? 'selected' : '' %>>üç∞ Dessert</option>
                                    <option value="Tradisional" <%= (typeof kuliner !== 'undefined' && kuliner && kuliner.jenis_makanan == 'Tradisional') ? 'selected' : '' %>>üèÆ Tradisional</option>
                                    <option value="Modern" <%= (typeof kuliner !== 'undefined' && kuliner && kuliner.jenis_makanan == 'Modern') ? 'selected' : '' %>>üçî Modern</option>
                                    <option value="Street Food" <%= (typeof kuliner !== 'undefined' && kuliner && kuliner.jenis_makanan == 'Street Food') ? 'selected' : '' %>>üåÆ Street Food</option>
                                    <option value="Fine Dining" <%= (typeof kuliner !== 'undefined' && kuliner && kuliner.jenis_makanan == 'Fine Dining') ? 'selected' : '' %>>üçΩÔ∏è Fine Dining</option>
                                </select>
                                <small class="form-text text-muted">Pilih kategori jenis makanan</small>
                            </div>

                            <!-- Harga -->
                            <div class="col-md-6 mb-3">
                                <label for="harga" class="form-label">
                                    <i class="fas fa-money-bill-wave text-success"></i> Harga Rata-rata
                                </label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">Rp</span>
                                    </div>
                                    <input type="number" 
                                           class="form-control" 
                                           id="harga" 
                                           name="harga" 
                                           value="<%= (typeof kuliner !== 'undefined' && kuliner) ? kuliner.harga : '' %>"
                                           placeholder="0"
                                           min="0">
                                </div>
                                <small class="form-text text-muted">Harga rata-rata per porsi (opsional)</small>
                            </div>

                            <!-- Lokasi -->
                            <div class="col-md-6 mb-3">
                                <label for="lokasi" class="form-label">
                                    <i class="fas fa-map-marker-alt text-danger"></i> Lokasi *
                                </label>
                                <input type="text" 
                                       class="form-control" 
                                       id="lokasi" 
                                       name="lokasi" 
                                       value="<%= (typeof kuliner !== 'undefined' && kuliner) ? kuliner.lokasi : '' %>"
                                       placeholder="Masukkan lokasi"
                                       required>
                                <small class="form-text text-muted">Alamat atau area tempat kuliner</small>
                            </div>

                            <!-- Rating -->
                            <div class="col-md-6 mb-3">
                                <label for="rating" class="form-label">
                                    <i class="fas fa-star text-warning"></i> Rating
                                </label>
                                <select class="form-control" id="rating" name="rating">
                                    <option value="">Pilih Rating</option>
                                    <option value="1" <%= (typeof kuliner !== 'undefined' && kuliner && kuliner.rating == 1) ? 'selected' : '' %>>‚≠ê 1</option>
                                    <option value="2" <%= (typeof kuliner !== 'undefined' && kuliner && kuliner.rating == 2) ? 'selected' : '' %>>‚≠ê‚≠ê 2</option>
                                    <option value="3" <%= (typeof kuliner !== 'undefined' && kuliner && kuliner.rating == 3) ? 'selected' : '' %>>‚≠ê‚≠ê‚≠ê 3</option>
                                    <option value="4" <%= (typeof kuliner !== 'undefined' && kuliner && kuliner.rating == 4) ? 'selected' : '' %>>‚≠ê‚≠ê‚≠ê‚≠ê 4</option>
                                    <option value="5" <%= (typeof kuliner !== 'undefined' && kuliner && kuliner.rating == 5) ? 'selected' : '' %>>‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê 5</option>
                                </select>
                                <small class="form-text text-muted">Rating berdasarkan ulasan pengunjung</small>
                            </div>

                            <!-- Kontak -->
                            <div class="col-md-12 mb-3">
                                <label for="kontak" class="form-label">
                                    <i class="fas fa-phone text-info"></i> Kontak
                                </label>
                                <input type="text" 
                                       class="form-control" 
                                       id="kontak" 
                                       name="kontak" 
                                       value="<%= (typeof kuliner !== 'undefined' && kuliner) ? kuliner.kontak : '' %>"
                                       placeholder="Nomor telepon, WhatsApp, atau media sosial">
                                <small class="form-text text-muted">No. HP, telepon, WhatsApp, Instagram, dll</small>
                            </div>

                            <!-- Deskripsi -->
                            <div class="col-md-12 mb-3">
                                <label for="deskripsi" class="form-label">
                                    <i class="fas fa-align-left text-secondary"></i> Deskripsi
                                </label>
                                <textarea class="form-control" 
                                          id="deskripsi" 
                                          name="deskripsi" 
                                          rows="4"
                                          placeholder="Jelaskan tentang kuliner ini"><%= (typeof kuliner !== 'undefined' && kuliner) ? kuliner.deskripsi : '' %></textarea>
                                <small class="form-text text-muted">Deskripsi detail tentang rasa, bahan, keunikan, dll</small>
                            </div>

                            <!-- Gambar -->
                            <div class="col-md-12 mb-3">
                                <label for="gambar" class="form-label">
                                    <i class="fas fa-image text-info"></i> Gambar Kuliner
                                </label>
                                <input type="file" 
                                       class="form-control-file" 
                                       id="gambar" 
                                       name="gambar" 
                                       accept="image/*">
                                <small class="form-text text-muted">Format: JPG, PNG, GIF. Maksimal 5MB</small>
                                
                                <% if (typeof kuliner !== 'undefined' && kuliner && kuliner.gambar) { %>
                                    <div class="mt-3">
                                        <p class="mb-2"><strong>Gambar saat ini:</strong></p>
                                        <img src="/uploads/kuliner/<%= kuliner.gambar %>" 
                                             alt="<%= kuliner.nama %>" 
                                             class="img-thumbnail" 
                                             style="max-width: 200px; max-height: 150px;">
                                        <p class="text-muted mt-2">
                                            <small><i class="fas fa-info-circle"></i> Biarkan kosong jika tidak ingin mengganti gambar</small>
                                        </p>
                                    </div>
                                <% } %>
                            </div>
                        </div>

                        <!-- Submit Buttons -->
                        <hr>
                        <div class="row">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-warning mr-2">
                                    <i class="fas fa-save"></i> 
                                    <%= (typeof kuliner !== 'undefined' && kuliner) ? 'Update' : 'Simpan' %>
                                </button>
                                <a href="/admin/kuliner" class="btn btn-secondary">
                                    <i class="fas fa-times"></i> Batal
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Tips Card -->
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-info">
                    <h6 class="m-0 font-weight-bold text-white">
                        <i class="fas fa-lightbulb"></i> Tips Pengisian
                    </h6>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <i class="fas fa-utensils fa-3x text-warning"></i>
                    </div>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            <strong>Nama:</strong> Gunakan nama yang mudah diingat
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            <strong>Jenis:</strong> Pilih kategori yang tepat
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            <strong>Lokasi:</strong> Sertakan alamat yang jelas
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            <strong>Deskripsi:</strong> Jelaskan rasa dan keunikan
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            <strong>Gambar:</strong> Foto yang menggugah selera
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Menu Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-warning">
                    <h6 class="m-0 font-weight-bold text-white">
                        <i class="fas fa-info-circle"></i> Info Kuliner
                    </h6>
                </div>
                <div class="card-body">
                    <small class="text-muted">
                        <strong>Pastikan informasi yang diisi akurat:</strong>
                        <br>‚Ä¢ Nama kuliner yang benar
                        <br>‚Ä¢ Lokasi yang mudah ditemukan
                        <br>‚Ä¢ Harga yang up-to-date
                        <br>‚Ä¢ Foto yang menarik dan berkualitas
                        <br>‚Ä¢ Deskripsi yang informatif
                    </small>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->

<script>
$(document).ready(function() {
    // Format input harga
    $('#harga').on('input', function() {
        let value = this.value.replace(/[^\d]/g, '');
        this.value = value;
    });
    
    // Preview gambar
    $('#gambar').on('change', function(e) {
        const file = e.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                const preview = `
                    <div class="mt-3" id="imagePreview">
                        <p class="mb-2"><strong>Preview gambar baru:</strong></p>
                        <img src="${e.target.result}" class="img-thumbnail" style="max-width: 200px; max-height: 150px;">
                    </div>
                `;
                
                $('#imagePreview').remove();
                $(preview).insertAfter('#gambar').next('.form-text');
            };
            reader.readAsDataURL(file);
        }
    });
    
    // Form validation
    $('#kulinerForm').on('submit', function(e) {
        let isValid = true;
        
        // Validasi nama
        if ($('#nama').val().trim() === '') {
            isValid = false;
            $('#nama').addClass('is-invalid');
        } else {
            $('#nama').removeClass('is-invalid');
        }
        
        // Validasi jenis makanan
        if ($('#jenis_makanan').val() === '') {
            isValid = false;
            $('#jenis_makanan').addClass('is-invalid');
        } else {
            $('#jenis_makanan').removeClass('is-invalid');
        }
        
        // Validasi lokasi
        if ($('#lokasi').val().trim() === '') {
            isValid = false;
            $('#lokasi').addClass('is-invalid');
        } else {
            $('#lokasi').removeClass('is-invalid');
        }
        
        if (!isValid) {
            e.preventDefault();
            $('html, body').animate({
                scrollTop: $('.is-invalid').first().offset().top - 100
            }, 500);
        }
    });
});
</script>

