                        </div>
                        <div class="col-6 mb-3">
                            <a href="/admin/transportasi/create" class="btn btn-primary btn-block">
                                <i class="fas fa-bus"></i><br>
                                Tambah Transportasi
                            </a>
                        </div>
                        <div class="col-6 mb-3">
                            <a href="/admin/kuliner/create" class="btn btn-warning btn-block">
                                <i class="fas fa-utensils"></i><br>
                                Tambah Kuliner
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-clock"></i> Activity Log
                    </h6>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-info"></div>
                            <div class="timeline-content">
                                <h6 class="timeline-title">Sistem SIPJ Online</h6>
                                <p class="timeline-text">Dashboard admin berhasil dimuat</p>
                                <small class="text-muted">
                                    <i class="fas fa-clock"></i> 
                                    <span id="currentTime"></span>
                                </small>
                            </div>
                        </div>
                        <div class="timeline-item">
                            <div class="timeline-marker bg-success"></div>
                            <div class="timeline-content">
                                <h6 class="timeline-title">Database Terhubung</h6>
                                <p class="timeline-text">Koneksi database berjalan normal</p>
                                <small class="text-muted">
                                    <i class="fas fa-check"></i> Status: Active
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
<!-- /.container-fluid -->

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
// Safe stats object dengan default values
const stats = {
    destinasi: <%= (typeof stats !== 'undefined' && stats && typeof stats.destinasi !== 'undefined') ? stats.destinasi : 0 %>,
    akomodasi: <%= (typeof stats !== 'undefined' && stats && typeof stats.akomodasi !== 'undefined') ? stats.akomodasi : 0 %>,
    transportasi: <%= (typeof stats !== 'undefined' && stats && typeof stats.transportasi !== 'undefined') ? stats.transportasi : 0 %>,
    kuliner: <%= (typeof stats !== 'undefined' && stats && typeof stats.kuliner !== 'undefined') ? stats.kuliner : 0 %>
};

// Chart colors
Chart.defaults.global.defaultFontFamily = 'Nunito', '-apple-system,system-ui,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif';
Chart.defaults.global.defaultFontColor = '#858796';

// Area Chart
var ctx = document.getElementById("myAreaChart");
var myLineChart = new Chart(ctx, {
    type: 'line',
    data: {
        labels: ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"],
        datasets: [{
            label: "Data Wisata",
            lineTension: 0.3,
            backgroundColor: "rgba(78, 115, 223, 0.05)",
            borderColor: "rgba(78, 115, 223, 1)",
            pointRadius: 3,
            pointBackgroundColor: "rgba(78, 115, 223, 1)",
            pointBorderColor: "rgba(78, 115, 223, 1)",
            pointHoverRadius: 3,
            pointHoverBackgroundColor: "rgba(78, 115, 223, 1)",
            pointHoverBorderColor: "rgba(78, 115, 223, 1)",
            pointHitRadius: 10,
            pointBorderWidth: 2,
            data: [0, 5, 10, 15, 20, 25, 30, 35, 40, 45, 50, stats.destinasi + stats.akomodasi + stats.transportasi + stats.kuliner],
        }],
    },
    options: {
        maintainAspectRatio: false,
        layout: {
            padding: {
                left: 10,
                right: 25,
                top: 25,
                bottom: 0
            }
        },
        scales: {
            xAxes: [{
                time: {
                    unit: 'date'
                },
                gridLines: {
                    display: false,
                    drawBorder: false
                },
                ticks: {
                    maxTicksLimit: 7
                }
            }],
            yAxes: [{
                ticks: {
                    maxTicksLimit: 5,
                    padding: 10,
                    callback: function(value, index, values) {
                        return value;
                    }
                },
                gridLines: {
                    color: "rgb(234, 236, 244)",
                    zeroLineColor: "rgb(234, 236, 244)",
                    drawBorder: false,
                    borderDash: [2],
                    zeroLineBorderDash: [2]
                }
            }],
        },
        legend: {
            display: false
        },
        tooltips: {
            backgroundColor: "rgb(255,255,255)",
            bodyFontColor: "#858796",
            titleMarginBottom: 10,
            titleFontColor: '#6e707e',
            titleFontSize: 14,
            borderColor: '#dddfeb',
            borderWidth: 1,
            xPadding: 15,
            yPadding: 15,
            displayColors: false,
            intersect: false,
            mode: 'index',
            caretPadding: 10,
        }
    }
});

// Pie Chart
var ctx = document.getElementById("myPieChart");
var myPieChart = new Chart(ctx, {
    type: 'doughnut',
    data: {
        labels: ["Destinasi", "Akomodasi", "Transportasi", "Kuliner"],
        datasets: [{
            data: [stats.destinasi, stats.akomodasi, stats.transportasi, stats.kuliner],
            backgroundColor: ['#36b9cc', '#1cc88a', '#4e73df', '#f6c23e'],
            hoverBackgroundColor: ['#2c9faf', '#17a673', '#2e59d9', '#dda20a'],
            hoverBorderColor: "rgba(234, 236, 244, 1)",
        }],
    },
    options: {
        maintainAspectRatio: false,
        tooltips: {
            backgroundColor: "rgb(255,255,255)",
            bodyFontColor: "#858796",
            borderColor: '#dddfeb',
            borderWidth: 1,
            xPadding: 15,
            yPadding: 15,
            displayColors: false,
            caretPadding: 10,
        },
        legend: {
            display: false
        },
        cutoutPercentage: 80,
    },
});

// Update current time
function updateTime() {
    const now = new Date();
    const timeString = now.toLocaleDateString('id-ID') + ' ' + now.toLocaleTimeString('id-ID');
    document.getElementById('currentTime').textContent = timeString;
}

// Update time immediately and then every second
updateTime();
setInterval(updateTime, 1000);

// Animate counters
function animateCounters() {
    const counters = ['destinasiCount', 'akomodasiCount', 'transportasiCount', 'kulinerCount'];
    const values = [stats.destinasi, stats.akomodasi, stats.transportasi, stats.kuliner];
    
    counters.forEach((counterId, index) => {
        const counter = document.getElementById(counterId);
        const targetValue = values[index];
        let currentValue = 0;
        const increment = targetValue / 20;
        
        const timer = setInterval(() => {
            currentValue += increment;
            if (currentValue >= targetValue) {
                counter.textContent = targetValue;
                clearInterval(timer);
            } else {
                counter.textContent = Math.floor(currentValue);
            }
        }, 50);
    });
}

// Start counter animation when page loads
document.addEventListener('DOMContentLoaded', function() {
    setTimeout(animateCounters, 500);
});
</script>

<style>
.timeline {
    position: relative;
    padding-left: 30px;
}

.timeline-item {
    position: relative;
    padding-bottom: 20px;
}

.timeline-marker {
    position: absolute;
